---
import PhotoGrid from './PhotoGrid.astro';
import { featuredCollectionId, getImages } from '../data/imageStore';

const images = await getImages({ collection: featuredCollectionId });
---

<div class="container-custom">
	<div class="max-w-3xl mx-auto text-center mb-12">
		<span class="badge-soft">Selección curada</span>
		<h2 class="text-4xl md:text-5xl font-semibold mt-4 title-gradient">Trabajos destacados</h2>
		<p class="text-lg text-[hsl(215,18%,32%)] mt-4">
			Luz suave, tonos cálidos y composiciones limpias. Una muestra de proyectos personales y editoriales recientes.
		</p>
	</div>

	<div class="section-shell p-4 md:p-6">
		<PhotoGrid images={images} />
	</div>
</div>
