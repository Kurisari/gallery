---
import siteConfig from '../../site.config.mjs';

const owner = siteConfig.owner;
const base = import.meta.env.BASE_URL;
const profileImage = siteConfig.profileImage;
---

<section class="relative w-full overflow-hidden">
	<div class="container-custom py-12">
		<div class="max-w-3xl mx-auto text-center space-y-4">
			<h1 class="text-4xl md:text-5xl font-semibold leading-[1.05] title-gradient">
				Capturo momentos que me inspiran
			</h1>
			<p class="text-lg text-[hsl(215,18%,32%)]">
				Luz natural y escenas cotidianas. Primero fotos, luego palabras.
			</p>
			<div class="flex items-center justify-center gap-3 md:gap-4">
				<a href={`${base}/collections`} class="button-primary">Ver fotos</a>
				<a href={`${base}/about`} class="button-ghost">Conocer al autor</a>
			</div>
		</div>
	</div>
</section>
