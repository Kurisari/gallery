---
import MainLayout from '../layouts/MainLayout.astro';
import { Content as AboutPage } from '../content/about.md';
import siteConfig from '../../site.config.mjs';

const profileImage = siteConfig.profileImage;
---

<MainLayout>
	<section class="pt-28 pb-20">
		<div class="container-custom">
			<div class="section-shell p-8 md:p-12">
				<div class="grid grid-cols-1 lg:grid-cols-[1fr_1.1fr] gap-10 lg:gap-14 items-center">
					<div class="space-y-4">
						<span class="badge-soft">Sobre mí</span>
						<h1 class="text-4xl md:text-5xl font-semibold title-gradient">Cristian Aragón Salazar</h1>
						<div class="prose text-[hsl(215,18%,26%)] max-w-none">
							<AboutPage />
						</div>
					</div>

					<div class="relative">
						<div class="card-floating overflow-hidden">
							<img
								src={`/images/${profileImage}`}
								alt="Imagen de perfil"
								class="w-full h-full object-cover"
								loading="lazy"
							/>
						</div>
						<div class="absolute -left-6 -bottom-6 h-24 w-24 rounded-full bg-[hsla(31,66%,60%,0.18)] blur-3xl" aria-hidden="true"></div>
					</div>
				</div>
			</div>
		</div>
	</section>
</MainLayout>
